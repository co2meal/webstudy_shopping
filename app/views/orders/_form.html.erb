<% #form_for [@item, @item..build], html: {class: "form-horizontal well"} do |f| %>
<%= form_for [current_user.cart.item_lines.new(item: @item)], html: {class: "form-horizontal well"} do |f| %>
  <div class="form-group">
    <%= f.label :quantity, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :quantity, class: "form-control" %>      
    </div>
  </div>
  <div class="form-group hide">
    <%= f.label :item_id, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :item_id, class: "form-control" %>      
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-default" %>
    </div>
  </div>
<% end %>