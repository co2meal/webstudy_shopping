<%= form_for [@item, @item.orders.build], html: {class: "form-horizontal well"} do |f| %>
  <div class="form-group">
    <%= f.label :buyer_name, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :buyer_name, class: "form-control" %>      
    </div>
  </div>
  <div class="form-group">
    <%= f.label :location, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :location, class: "form-control" %>      
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-default" %>
    </div>
  </div>
<% end %>